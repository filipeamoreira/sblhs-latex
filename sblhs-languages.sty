\ProvidesPackage{sblhs-languages}[2012/10/12 v.01 Language support]


  \RequirePackage{polyglossia}
  	\setdefaultlanguage{english}
  	\setotherlanguages{hebrew, greek}


  \newfontfamily\hebrewfont[%
  		Script=Hebrew,Contextuals=Alternate,Ligatures=Required,Scale=1.15]{SBL Hebrew}
  \newcommand{\he}[1]{\texthebrew{#1}}

  \newfontfamily\copticfont[%
  		Script=Coptic,Contextuals=Alternate,Ligatures=Required]{Antinoou}
  \newcommand{\cp}[1]{{\copticfont #1}}

  \newfontfamily\greekfont[%
  		Script=Greek,Contextuals=Alternate,Ligatures=Required]{SBL Greek}
  \newcommand{\gk}[1]{{\textgreek #1}}
